<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.tanyueran.mapper.RedPacketDetailMapper">
  <!--添加-->
  <insert id="addRedPacketDetail" parameterType="RedPacketDetail">
    INSERT INTO
    red_packet_detail_table(id,packet_id,amout)
    VALUES (#{redPacketDetail.id},#{redPacketDetail.packet_id},#{redPacketDetail.amout})
  </insert>

  <!--根据红包id查询-->
  <select id="getAllRedPacketDetailByPacketId">
    SELECT * FROM red_table_detail_table WHERE packet_id = #{id}
  </select>
</mapper>