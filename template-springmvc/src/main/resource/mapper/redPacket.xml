<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.tanyueran.mapper.RedPacket">

  <!--添加红包-->
  <insert id="addRedPacket" parameterType="RedPacket">
    INSERT INTO
    red_packet_table(id,user_id,totalNum,restNum,totalAmount,remark)
     VALUES(#{redPacket.id},
     #{redPacket.user_id},
     #{redPacket.totalNum},
     #{redPacket.restNum},
     #{redPacket.totalAmount},
     #{redPacket.remark});
  </insert>

  <!--根据id查询红包信息-->
  <select id="getRedPacketById">
    SELECT * FROM red_packet_table WHERE id = #{id}
  </select>

  <update id="setRedPacketRestNum">
    UPDATE red_packet_table set restNum = #{num}
  </update>

</mapper>